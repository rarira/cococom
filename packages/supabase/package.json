{
  "name": "@cococom/supabase",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "start": "supabase start",
    "stop": "supabase stop",
    "update-types": "eval $(grep '^SUPABASE_PROJECT_ID' .env) && supabase gen types typescript --project-id \"$SUPABASE_PROJECT_ID\" --schema public > src/types.ts && pnpm build",
    "sync": "supabase db dump --data-only -f supabase/seed.sql && supabase db reset"
  },
  "exports": {
    "./libs": {
      "types": "./src/lib.ts",
      "default": "./dist/lib.js"
    },
    "./types": {
      "types": "./src/types.ts",
      "default": "./dist/types.js"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.43.5",
    "dotenv": "^16.4.5",
    "type-fest": "^4.21.0"
  },
  "devDependencies": {
    "@cococom/eslint-config": "workspace:*",
    "@cococom/prettier-config": "workspace:*",
    "@cococom/typescript-config": "workspace:*",
    "@types/dotenv": "^8.2.0",
    "supabase": "^1.178.2",
    "typescript": "latest"
  }
}
